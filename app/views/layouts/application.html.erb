<!DOCTYPE html>
<html>
  <head>
    <title>ShoeCollection</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= button_to "Log in with Google", '/auth/google_oauth2' %>
    <%= link_to("All Shoes", shoes_path )%> |
    <%= link_to("Most Expensive Shoe", expensive_shoe_path )%> |
    <%= link_to("New Shoe", new_shoe_path )%> |
    <%= link_to("All Brands", brands_path )%>

    <hr>

    <% if flash[:message] %>
      <div class="field_with_errors"><%= flash[:message] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
